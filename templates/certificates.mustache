{{!
    @template local_edwiserreports/certificates

    Display the activity navigation for all activities in a course

    Context variables required for this template:

    Example context (json):
    {
    }
}}
{{> local_edwiserreports/report-page-header }}
<div id="wdm-certificates-individual">
    <div id="wdm-userfilter" class="h-auto my-10">
        <div class="row">
            <div class="filter-selector col-12 col-md-3 mb-1">
                {{> local_edwiserreports/datatable/search }}
            </div>
            {{# cohort }}
                <div class="filter-selector pro-export-wrapper col-12 col-md-2 mb-1">
                    {{> local_edwiserreports/filters/cohorts_filter }}
                </div>
            {{/ cohort }}
            {{# hascertificates}}
                <div class="filter-selector col-12 col-md-3 mb-1" id="wdm-certificates-dropdown">
                    <select class="certificate-select form-control singleselect" name="certificate-select">
                        {{#certificates}}
                        <option value="{{id}}">{{coursename}}: {{name}}</option>
                        {{/certificates}}
                    </select>
                </div>
            {{/ hascertificates}}
            <div class="filter-selector col-12 col-md-4 mb-1 ml-auto">
                {{> local_edwiserreports/datatable/length }}
            </div>
        </div>
    </div>
    <table class="table w-100" class="table-responsive">
        <thead>
            <tr>
                <th class="theme-3-bg text-white">{{#str}} username, local_edwiserreports {{/str}}</th>
                <th class="theme-3-bg text-white">{{#str}} useremail, local_edwiserreports {{/str}}</th>
                <th class="theme-3-bg text-white">{{#str}} dateofissue, local_edwiserreports {{/str}}</th>
                <th class="theme-3-bg text-white">{{#str}} dateofenrol, local_edwiserreports {{/str}}</th>
                <th class="theme-3-bg text-white">{{#str}} grade, local_edwiserreports {{/str}}</th>
                <th class="theme-3-bg text-white">{{#str}} courseprogress, local_edwiserreports {{/str}}</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    {{# export }}
    <div class="pull-right px-5">
        {{> local_edwiserreports/exportreports }}
    </div>
    {{/ export }}
</div>
{{#js}}
M.local_edwiserreports = {
    secret: '{{{secret}}}'
};
{{/js}}
{{#setactive}}
    {{> local_edwiserreports/setactivenav }}
{{/setactive}}
