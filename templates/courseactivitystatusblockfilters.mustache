            {{#courses}}
            <option value="{{id}}">{{fullname}}</option>
            {{/courses}}
        </select>
    </div>
    <div class="filter-selector mx-1">
        <select id="courseactivitystatus-student-select" class="form-control singleselect w-full" name="state">
