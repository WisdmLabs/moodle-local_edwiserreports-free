<div class="insight-content">
    <label class="insight-value pr-2 palette-primary-text h3">{{{value}}}</label>
    {{#difference}}
        <span class="insight-direction d-inline-block pr-6 text-{{#direction}}success{{/direction}}{{^direction}}danger{{/direction}}">
            <span class="value">
                <i class="fa fa-arrow-circle-{{#direction}}up{{/direction}}{{^direction}}down{{/direction}}"></i>
                {{value}}%
            </span>
        </span>
    {{/difference}}
</div>
